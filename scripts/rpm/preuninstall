INSTALL_PREFIX=$RPM_INSTALL_PREFIX1

if [ $1 = 0 ]; then
	for SERVICE in $(rpm -ql draios-agent | sed '-nes@^/etc/rc\.d/init\.d/@@p')
	do
		/sbin/service $SERVICE stop > /dev/null 2>&1
		/sbin/chkconfig --del $SERVICE
	done
fi

dkms remove -m draios-agent -v %{version} --all --rpm_safe_upgrade

# Clean all generated Python bytecode
find $INSTALL_PREFIX/lib -iname "*.pyc" -delete > /dev/null 2>&1
find $INSTALL_PREFIX/lib -iname "*.pyo" -delete > /dev/null 2>&1
