#!/bin/bash
set -exu

rm -rf build/debug/*rpm
rm -rf build/debug/*deb
rm -rf build/release/*rpm
rm -rf build/release/*deb

./setup-dependencies
make -C build/debug package
make -C build/release package

rm -rf /tmp/packages
mkdir /tmp/packages
cp build/debug/*rpm /tmp/packages
cp build/release/*rpm /tmp/packages
cp build/debug/*deb /tmp/packages
cp build/release/*deb /tmp/packages
